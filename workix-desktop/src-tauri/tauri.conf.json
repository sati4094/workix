{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "workix-desktop",
  "version": "0.1.0",
  "identifier": "com.psath.workix-desktop",
  "build": {
    "beforeDevCommand": "npm run next:dev",
    "devUrl": "http://localhost:3033",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Workix - EPC Service Management",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:5000; connect-src 'self' http://localhost:5000 ws://localhost:5000; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: http://localhost:5000; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
